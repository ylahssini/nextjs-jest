{
    "extends": "airbnb",
    "env": {
        "jest": true,
        "node": true,
        "es6": true,
        "browser": true,
        "commonjs": true
    },
    "plugins": ["babel", "react-hooks"],
    "rules": {
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/prop-types": 0,
        "react/jsx-indent-props": ["error", 4],
        "react/jsx-one-expression-per-line": 0,
        "max-len": 0,
        "react/no-danger": 0,
        "object-curly-newline": 0,
        "import/no-cycle": 0,
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "@ts-ignore": 0,
        "no-bitwise": ["error", { "allow": ["~"] }]
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "settings": {
        "import/resolver": {
            "node": {
                "moduleDirectory": ["node_modules", "src/"]
            }
        }
    }
}
